{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": ["es2017", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "outDir": "dist",
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "target": "es2017",
        "typeRoots": [
            "./typings",
            "node_modules/@types"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "node_modules",
        "test"
    ]
}
